{
  "openapi": "3.0.0",
  "info": {
    "title": "LINZ Data Service API",
    "version": "1.0.0",
    "description": "Land Information New Zealand (LINZ) vector data query API"
  },
  "servers": [
    {
      "url": "https://data.linz.govt.nz/services/query/v1"
    }
  ],
  "paths": {
    "/vector.json": {
      "get": {
        "operationId": "queryVector",
        "summary": "Query vector data by location",
        "description": "Retrieves vector data for a specific layer at a given location (x, y coordinates) within a radius",
        "parameters": [
          {
            "name": "key",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "API token for authentication"
          },
          {
            "name": "layer",
            "in": "query",
            "required": true,
            "schema": {
              "type": "integer"
            },
            "description": "Layer ID to query (e.g., 50823)"
          },
          {
            "name": "x",
            "in": "query",
            "required": true,
            "schema": {
              "type": "number"
            },
            "description": "X coordinate (longitude)"
          },
          {
            "name": "y",
            "in": "query",
            "required": true,
            "schema": {
              "type": "number"
            },
            "description": "Y coordinate (latitude)"
          },
          {
            "name": "max_results",
            "in": "query",
            "required": false,
            "schema": {
              "type": "integer",
              "default": 3,
              "minimum": 1
            },
            "description": "Maximum number of results to return"
          },
          {
            "name": "radius",
            "in": "query",
            "required": false,
            "schema": {
              "type": "integer",
              "default": 10000,
              "minimum": 0
            },
            "description": "Search radius in meters"
          },
          {
            "name": "geometry",
            "in": "query",
            "required": false,
            "schema": {
              "type": "boolean",
              "default": true
            },
            "description": "Include geometry in response"
          },
          {
            "name": "with_field_names",
            "in": "query",
            "required": false,
            "schema": {
              "type": "boolean",
              "default": true
            },
            "description": "Include field names in response"
          }
        ],
        "responses": {
          "200": {
            "description": "Successful response with vector data",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "type": {
                      "type": "string",
                      "description": "GeoJSON type"
                    },
                    "features": {
                      "type": "array",
                      "items": {
                        "$ref": "#/components/schemas/Feature"
                      }
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Bad request - invalid parameters"
          },
          "401": {
            "description": "Unauthorized - invalid API key"
          },
          "500": {
            "description": "Server error"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Feature": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string",
            "enum": ["Feature"]
          },
          "geometry": {
            "type": "object",
            "description": "GeoJSON geometry object"
          },
          "properties": {
            "type": "object",
            "description": "Feature properties",
            "additionalProperties": true
          }
        }
      }
    }
  }
}


